@using B2BTecnology.Financeiro.DTO
@using B2BTecnology.Financeiro.Web.Extencion
@model List<ContratoDTO>

@{
    ViewBag.Title = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Clientes
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="/Home">Horus</a>
            </li>
            <li class="active">
                <i class="fa fa-dashboard fa-fw"></i> Clientes
            </li>
        </ol>
    </div>
</div>

@Html.Partial("Success")
@Html.Partial("ErrorMessage")

<div class="row">
    <div class="col-lg-12 ">
        <div class="form-group col-md-12">
            <div class="table-responsive">
                <table id="tabelaEquipamentos" class="table table-hover table-striped hand">
                    <thead>
                    <tr>
                        <th style="width: 5%">Código</th>
                        <th style="width: 30%">Nome Cliente</th>
                        <th style="width: 25%">CNPJ/CPF</th>
                        <th style="width: 30%">Nome Vendedor</th>
                        <th style="width: 10%"></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var contrato in Model)
                    {
                        var cliente = contrato.Cliente;
                        <tr id="@contrato.IdContrato">
                            <td><label>@contrato.IdContrato</label></td>
                            <td name><label>@cliente.Nome</label></td>
                            <td documento="@cliente.Documento"><label>@cliente.Documento.DocumentoComMascara()</label></td>
                            <td><label>@(contrato.Vendedores == null ? "" : contrato.Vendedores.Nome)</label></td>
                            <td><button class="btn btn-warning" type="button" value=""><i class="fa fa-trash"> Excluir</i></button></td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Html.Partial("Partials/_Confirmacao")

@section scripts{
    
    <script>

        $(function() {

            $("#tabelaEquipamentos tbody tr").dblclick(function() {
                
                geral.Redirect("/Contrato/Detalhe/" + $(this).attr("id"));

            });

            $("#deleteModal .modal-footer .btn-success").click(function () {

                $.ajax({
                
                    url: "/Cliente/Excluir/",
                    data: {
                        idCliente: $('#deleteModal .modal-body input[type=hidden]').val()
                    },
                    type: "post"

                })
                .done(function() {
                    
                    geral.Redirect("/Cliente/Listar");

                });

            });

            $("table tbody tr td button").each(function() {

                $(this).click(function() {
                    var id = $(this).closest('tr').attr('id');
                    var nome = $($(this).closest('tr').find('td[name]')).text();
                    geral.ModalExluir('Excluir - Cliente', id, nome);

                });

            });

        });

    </script>

}