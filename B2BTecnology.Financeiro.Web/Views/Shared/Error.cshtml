@{
    var error = (ViewBag.Error ?? TempData["Error"]) ?? false;
    Layout = null;
}

@if (error)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-danger" role="alert">
                @Html.ValidationSummary()
            </div>
        </div>
    </div>
}
