@model B2BTecnology.Financeiro.DTO.EnderecoDTO

<div class="row">
    <div class="col-lg-12">
        <h4 class="page-header">
            Endereço
        </h4>
    </div>
</div>

@Html.Hidden("Cliente.Endereco.IdEndereco", Model.IdEndereco)

<div class="row">
    <div class="col-lg-12 ">
        <div class="form-group col-lg-5">
            <label class="control-label">Endereço: </label>
            <input class="form-control" id="Rua" name="Cliente.Endereco.Rua" type="text" value="@Model.Rua" />
        </div>
        <div class="form-group col-lg-2">
            <label class="control-label">Numero: </label>
            <input class="form-control" id="Numero" name="Cliente.Endereco.Numero" type="text" value="@Model.Numero" />
        </div>
        <div class="form-group col-lg-4">
            <label class="control-label">Complemento: </label>
            <input class="form-control" id="Complemento" name="Cliente.Endereco.Complemento" type="text" value="@Model.Complemento" />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 ">
        <div class="form-group col-lg-5">
            <label class="control-label">Bairro: </label>
            <input class="form-control" id="Bairro" name="Cliente.Endereco.Bairro" type="text" value="@Model.Bairro" />
        </div>
        <div class="form-group col-lg-3">
            <label class="control-label">CEP: </label>
            <input class="form-control" id="Cep" name="Cliente.Endereco.Cep" type="text" value="@Model.Cep" />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 ">
        <div class="form-group col-lg-5">
            <label class="control-label">Cidade: </label>
            <input class="form-control" id="Cidade" name="Cliente.Endereco.Cidade" type="text" value="@Model.Cidade" />
        </div>
        <div class="form-group col-lg-1">
            <label class="control-label">UF: </label>
            <input class="form-control" id="Estado" name="Cliente.Endereco.Estado" type="text" value="@Model.Estado" />
        </div>
    </div>
</div>

<script src="~/js/jquery-1.12.2.min.js"></script>
<script>

    $('#Cep').focusout(function (e) {
        
        $('#Rua').val('');
        $('#Bairro').val('');
        $('#Cidade').val('');
        $('#Estado').val('');

        var cep = $('#Cep').val().replace('-', '');
        
        $.getJSON('http://cep.republicavirtual.com.br/web_cep.php?cep=' + cep + '&formato=jsonp', {}, function (data) {
            
            if (data.resultado_txt == 'sucesso - cep completo') {
                $('#Rua').val(data.tipo_logradouro + ' ' + data.logradouro);
                $('#Bairro').val(data.bairro);
                $('#Cidade').val(data.cidade);
                $('#Estado').val(data.uf);
            }

        });
        e.preventDefault();
    });

</script>

