@model IEnumerable<B2BTecnology.Financeiro.DTO.ComissaoDTO>

@{
    ViewBag.Title = "Comissão";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Comissão
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="/Home">B2B Tecnology</a>
            </li>
            <li class="active">
                <i class="fa fa-edit fa-fw"></i> Comissão
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 ">
        <div class="form-group col-md-2">
            <label class="control-label">Mês Pagamento: </label>
            <select class="form-control">
                <option>Selecione</option>
            </select>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 ">
        <div class="form-group col-md-11">
            <label class="control-label">Vendedore: </label>
            @*<select class="form-control">
                <option>Selecione</option>
            </select>*@
            @Html.DropDownList("VendedorId", (IEnumerable<SelectListItem>)ViewBag.Vendedor, new { @class = "form-control", @style = "background-color: #FFFFFF; width: 120px;" })

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 ">
        <div class="form-group col-md-11">
            <label class="control-label">Canal: </label>
            <select class="form-control">
                <option>Selecione</option>
            </select>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 ">
        <div class="form-group col-md-12">
            <div class="table-responsive">
                <table id="tabelaEquipamentos" class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th style="width: 40%">Nome Cliente</th>
                            <th style="width: 20%">Valor à Pagar</th>
                            <th style="width: 20%">Pago</th>
                            <th style="width: 20%">Comissão</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            var comissao = Model.ToList()[i];
                            <tr id="@(string.Format("row-{0}", comissao.CodigoPagamento))">
                                <td><label name="@(string.Format("Comissao[{0}].Marca", i))">@comissao.NomeCliente</label></td>
                                <td><label name="@(string.Format("Comissao[{0}].DataPagamento", i))">@comissao.ValorPagar</label></td>
                                <td><label name="@(string.Format("Comissao[{0}].ValorPago", i))">@comissao.Pago</label></td>
                                <td><label name="@(string.Format("Comissao[{0}].Pago", i))">@comissao.Comissao</label></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>