@model List<B2BTecnology.Financeiro.DTO.ContatoDTO>

<div class="row">
    <div class="col-lg-12 ">
        <div class="form-group col-md-12">
            <div class="table-responsive">
                <table id="tblListaAssinaturas" class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>
                                Tipo Contato
                            </th>
                            <th>
                                Nome
                            </th>
                            <th>
                                E-mail
                            </th>
                            <th>
                                Telefone
                            </th>
                            <th>
                                Celular
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            var contato = Model.ToList()[i];
                            <tr id="@contato.IdContato">
                                <td>
                                    @Html.Hidden("Contatos[" + i + "].IdContato", contato.IdContato)
                                    @Html.Hidden("Contatos[" + i + "].IdTipoContato", contato.IdTipoContato)
                                    @Html.Hidden("Contatos[" + i + "].NomeContato", contato.NomeContato)
                                    @Html.Hidden("Contatos[" + i + "].Email", contato.Email)
                                    @Html.Hidden("Contatos[" + i + "].Telefone", contato.Telefone)
                                    @Html.Hidden("Contatos[" + i + "].Celular", contato.Celular)
                                    <label>@(contato.IdTipoContato == 1 ? "Geral" : "Técnico")</label>
                                </td>
                                <td><label>@contato.NomeContato</label></td>
                                <td><label>@contato.Email</label></td>
                                <td><label>@contato.Telefone</label></td>
                                <td><label>@contato.Celular</label></td>
                                <td><button class="btn btn-warning" type="button" data-index="@i" value=""><i class="fa fa-trash"> Excluir</i></button></td>
                            </tr>
                        }
                </table>
            </div>
        </div>
    </div>
</div>